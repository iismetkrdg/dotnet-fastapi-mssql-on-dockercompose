@{
    ViewData["Title"] = "Find ur Taste";
}
<header class="masthead-1 mb-0" style="height: 50vh !important;padding-top:20vh;">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-12 align-self-end">
                <h1 class="text-white font-weight-bold">Find ur Taste</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">With the <b>7Taste</b> Spotify playlist URL sharing feature, you can easily create and share recommendation playlists with your friends. Simply enter a Spotify playlist URL and let the music sharing begin!</p>
            </div>
        </div>
    </div>
</header>
<section class="page-section">
    <div class="container px-4">
        <div class="row justify-content-center w-100 mb-5">
            <h4 class="text-dark border w-100 p-2 mb-3 rounded text-center">Select a playlist to find new tastes</h4>
            @foreach(var item in ViewBag.Playlists)
            {
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="card mb-3 position-relative">
                        <div class="row g-0">
                            <div class="col-md-4">
                                
                                <img src="@(item.Images.Length>0 ? item.Images[0].Url : "/image/defaultplaylist.png")" class="img-fluid rounded-start" alt="@item.Name-image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <a style="text-decoration:none;background-color: #1cd760 !important;" class="btn card-text text-muted position-absolute bottom-0 mb-1" asp-controller="x" asp-action="RecommendationForSUser" asp-route-id="@item.Id">
                                        Select
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>