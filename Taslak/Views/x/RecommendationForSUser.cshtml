@{
    ViewData["Title"] = "Find ur Taste";
}
<header class="masthead-1 mb-0">
    <div class="container px-4 px-lg-5 h-25">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-12 align-self-end">
                <h1 class="text-white font-weight-bold">Find ur Taste</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">With the <b>7Taste</b> Spotify playlist URL sharing feature, you can easily create and share recommendation playlists with your friends. Simply enter a Spotify playlist URL and let the music sharing begin!</p>
            </div>
        </div>
    </div>
</header>
<section class="page-section">
    <div class="container px-4 px-lg-5">
        <div class="row justify-content-center mb-5">
            <a asp-controller="x" asp-action="CreatePlaylistForMe" asp-route-id="@ViewBag.ToSaveTracksIds" class="btn btn-success p-2 m-2">Create a Playlist</a>
            @foreach(var item in ViewBag.Recommendations)
            {
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="card mb-3 position-relative" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@item.Album.Images[0].Url" class="img-fluid rounded-start" alt="@item.Name-image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text text-success">@item.Artists[0].Name</p>

                                    <a target="_blank" style="text-decoration:none;background-color: #1cd760 !important;" class="btn card-text text-muted position-absolute bottom-0 mb-1" href="@item.ExternalUrls.Spotify">
                                        Listen on Spotify
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>