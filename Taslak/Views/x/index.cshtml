@model Taslak.ViewModels.SendUrlsViewModel
@{
    ViewData["Title"] = "Find ur Taste";
}
<header class="masthead-1 mb-0" style="height: 50vh !important;padding-top:20vh;">
    <div class="container px-4 px-lg-5 h-25">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-12 align-self-end">
                <h1 class="text-white font-weight-bold">Find ur Taste</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">With the <b>7Taste</b> Spotify playlist URL sharing feature, you can easily create and share recommendation playlists with your friends. Simply enter a Spotify playlist URL and let the music sharing begin!</p>
            </div>
        </div>
    </div>
</header>
<section class="page-section">
    <div class="container px-4 px-lg-5">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-12 card border gx-4 gx-lg-5 text-center mb-4 mt-0 p-4 border-0 w-75 bg-success-subtle">
                Copy & paste your spotify playlist links below and create your 7Taste link.
            </div>
            <div class="col-lg-12 card border gx-4 gx-lg-5 text-center mb-4 mt-0 p-4 border-0 w-75 bg-danger-subtle" style="font-size: 8pt;">
                <p>In this section you can only use public spotify playlist links. If you want to use your private spotify playlists, you can use </p>
                <a class="btn btn-sm" style="background-color: #1cd760;" asp-controller="account" asp-action="LoginWithSpotify">Login with Spotify</a>
            </div>
            
            <div class="col-lg-8">
                <form method="post" asp-controller="x" asp-action="PlaylistUrls" >
                    <div class="form-floating mb-3 w-100">
                        <input class="form-control" type="text" asp-for="links"></input>
                        <label class="form-label" asp-for="links">Urls</label>
                        <span asp-validation-for="links" class="text-danger"></span>
                    </div>
                    <button class="btn btn-light text-success" type="submit" value=""> <i class="bi bi-share text-dark"></i> Create your new Taste</button>
                </form>
            </div>
        </div>
    </div>

</section>