@{
    ViewData["Title"] = "Find ur Taste on Spotify";
}
<header class="masthead-1 mb-0" style="height: 100vh !important;padding-top:20vh;">
    <div class="container px-4 px-lg-5 h-25">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-12 align-self-end">
                <h1 class="text-white font-weight-bold">Your playlist has been created</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-12 col-md-12 align-self-baseline">
                <p class="text-white-75 mb-5">Go to Spotify now and start discovering new tastes.</p>
                <a class="btn btn-success btn-x btn-xl" href="https://open.spotify.com/playlist/@ViewBag.PlaylistId" target="_blank">Go to Spotify</a>
            </div>
        </div>
    </div>
</header>