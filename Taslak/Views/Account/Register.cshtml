@model Taslak.Models.User
@{
    ViewData["Title"] = "Register";
}
<!-- Page Header-->
<header class="page-section masthead bg-theme-color">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 mt-5">
            <div class="col-md-6 col-lg-6 col-xl-6">
                <div class="text-center text-white">
                    <img src="~/image/7tstlogo.png" class="img-fluid" style="width: 200px; margin:0px !important;" alt="Our logo 7Taste">
                    <h2 class="mt-5">Join us in 1 min</h2>
                    <hr class="divider" />
                </div>
                <div class="text-center text-white">
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse, quam? Reiciendis eligendi nihil, fugiat blanditiis totam fugit natus harum, aut laborum asperiores corporis!</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-6 ">
                <div class="row col-md-4 mt-2 bg-light p-5 rounded w-100" style="--bs-bg-opacity: .3;" >
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-2">
                            <input class="form-control" type="text" asp-for="Username">
                            <label asp-for="Username" id="Username">Username</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input class="form-control" asp-for="Password">
                            <label asp-for="Password" id="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input class="form-control" asp-for="Repassword">
                            <label asp-for="Repassword" id="Repassword">Repassword</label>
                            <span asp-validation-for="Repassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input class="form-control" asp-for="Email" autocomplete="email">
                            <label asp-for="Email" id="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-4 d-grid">
                            <input type="submit" class="btn btn-light " value="Register">
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Account" class="text-dark mt-3" asp-action="Login">Already have an account?</a>
                        </div>
                        <div style="display: flex;flex-direction:row;background-color:rgba(28,215,96,0.3);padding:6px;margin-top:5px;padding-bottom:12px;">
                            <a role="button" class="btn btn-sm mt-2 p-2" style="flex:50%;max-width:50%;background-color: #1cd760;" asp-controller="Account" asp-action="LoginWithSpotify">Login with Spotify</a>
                            <p style="flex:50%;font-size:8pt;" class="mt-2 m-1 text-dark">You can use your private spotify playlists by logging in with spotify</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>

